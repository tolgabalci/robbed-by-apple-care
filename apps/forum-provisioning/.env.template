# Discourse Environment Variables Template
# Copy this file to .env and fill in the actual values
# These values should be retrieved from Azure Key Vault in production

# PostgreSQL Configuration (Azure Database for PostgreSQL Flexible Server)
POSTGRES_HOST=your-postgres-server.postgres.database.azure.com
POSTGRES_PASSWORD=your-secure-postgres-password

# Azure Blob Storage Configuration
STORAGE_ACCOUNT=your-storage-account-name
BLOB_ACCESS_KEY=your-blob-access-key
BLOB_SECRET_KEY=your-blob-secret-key

# SMTP Configuration (Azure Communication Services or SendGrid)
SMTP_HOST=smtp.sendgrid.net
SMTP_USERNAME=apikey
SMTP_PASSWORD=your-sendgrid-api-key

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth Configuration
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# CDN Configuration (Azure Front Door)
CDN_HOSTNAME=your-frontdoor-hostname.azurefd.net

# Additional Security
DISCOURSE_SECRET_KEY_BASE=your-secret-key-base-64-chars-long